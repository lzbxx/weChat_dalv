/* pages/financialson/contract_application.wxss */
@import "../../pages/submit/submit.wxss";
.panel{
    margin: 0;
    padding: 0;
}
.panel_body{
    margin: 0;
    padding: 0;
}

.panel  .quantity {
    padding-left: 0
}

.way{
    margin-top: 20rpx;
    padding: 0rpx 30rpx;
    background: #fff;
     border-bottom: 1rpx solid #F0F0F0

}
.way > view:nth-of-type(1){
    font-size: 30rpx;
   
 
}
.contract_select{
    display: flex;
    height: 90rpx;
    background: #fff;
    align-items: center;
}
.contract_select > view{
    flex: 1;
    height: 70rpx;
    line-height: 70rpx;
    position: relative;
}
.contract_select > view:nth-of-type(1){
    border-right: 1rpx solid #F0F0F0
}
.contract_select > view:nth-of-type(2){
  padding-left: 20rpx
}
.contract_select > view  image{
    position: absolute;
    height: 40rpx;
    width: 40rpx;
    right: 30rpx;
    top: 50%;
    transform: translateY(-50%)
  
}

.address{
    box-sizing: border-box;
    padding: 20rpx 30rpx;
    height: 110rpx;
    font-size: 20rpx;
    background: #fff;
    align-items: stretch
}
.address view{
    height: 40rpx;
}