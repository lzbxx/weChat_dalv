.psection{
    color: #fff;
}

.heder{
    height: 150px;
    width: 100%;
    position: relative;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    overflow: hidden;
}

.heder .mohu{
    position: absolute;
    filter: blur(1px);
    height: 100%;
    width: 100%;
    z-index: -1;
    left: 0px;
}
.heder .search{
   display: flex;
   height: 30px;
   width: 74%;
   background: rgba(255, 255, 255,.3);
   color: white;
   border-radius: 5px;
   align-items: center;
   margin-top: 5px;
   position: relative;

}
.heder .search image{
    height: 25px;
    width: 25px;
}
.heder .search image:nth-of-type(1){
    position: absolute;
    left: -30px;
}
.heder .search image:nth-of-type(2){
    position: absolute;
    right: 0px;
    
}

.heder .search input{
    height: 25px;
    padding-left: 10px;
    width:90%;
}
.heder .message{
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    box-sizing: border-box;
    padding: 0px 10px;
    position: relative;
   
    
}
.heder .message image:nth-of-type(1){
    height: 60px;
    width: 60px;
    border: 3px solid white;
    display: inline-block
}
.heder .message .name{
    color: white;
    font-size: 18px;
}
.heder .message .name view:nth-of-type(1){
    background: rgba(0, 0, 0,.5);
    padding:5px ;
    margin-left: 5px;
    border-radius: 5px;
    font-size: 30rpx
}
.heder .message .name view:nth-of-type(1) text{
    display: inline-block;
    background:#FF5F63;
    font-size: 10px;
    padding: 2px;
}
.heder .message .name view:nth-of-type(2){
    background: rgba(0, 0, 0,.5);
    padding:2px ;
    margin: 5px;
    border-radius: 5px;
    font-size: 12px;
}
.nav{
    display: flex;
    flex-wrap: wrap;
    margin-top: 10px;
    background: white;
    padding: 5px;
    box-sizing: border-box;
}
.nav .nav_list{
    text-align: center;
    width: 25%;
    font-size: 14px;
    padding: 5px 2px;
    box-sizing: border-box;
    
}
.nav .nav_list image{
    width: 100rpx;
    height:100rpx;
}
.list{
    background: white;
    margin-top: 5px

}
.list .line_list {
    display: flex;
    box-sizing: border-box;
    padding: 10rpx 40rpx;
    flex-wrap: wrap;
}
.list .line_list .list_item{
    width: 50%;
    box-sizing: border-box;
    padding: 10rpx;
}
.list .line_list  .list_item image{
    height: 200rpx;
    width: 100%;
}
.list .line_list .list_item view:nth-of-type(1){
    font-size: 26rpx;
    height: 60rpx;
    overflow: hidden;
    line-height: 30rpx;
    text-overflow: ellipsis;/*文字隐藏后添加省略号*/
    /*white-space: nowrap;强制不换行*/
}

.list .line_list .list_item .price_destination{
    margin-top: 5px;
    height: 32rpx;
    font-size: 28rpx;
    display: flex;

}
.list .line_list .list_item .price_destination view:nth-of-type(1){
    color: #6E81F0;
    width: 78%;
    align-items: center;
}
.list .line_list .list_item .price_destination view:nth-of-type(2){
    color: orange;
    
}
